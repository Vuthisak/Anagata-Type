<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_120dp"
    android:background="@color/colorPrimary">

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_24dp"
        android:orientation="vertical"
        app:constraint_referenced_ids="titleText,subTitleText"
        app:flow_verticalBias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleText"
        style="@style/ToolbarTitle.TextColorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TestingKit" />

    <TextView
        android:id="@+id/subTitleText"
        style="@style/ToolbarSubTitle.Clickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/space_16dp"
        android:paddingVertical="@dimen/space_8dp"
        tools:text="Niradei + 12pt" />

    <TextView
        android:id="@+id/styleText"
        style="@style/ToolbarTitle.ToolbarChooseStyle"
        android:layout_width="@dimen/space_70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_24dp"
        android:background="@drawable/white_border_circle"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/space_16dp"
        android:text="@string/A_a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>